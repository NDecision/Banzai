<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>A Banzai extension for serializing workflows to JSON with System.Text.Json</Description>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <NoWarn>NU1603</NoWarn>
    <PackageId>Banzai.Serialization.SystemJson</PackageId>
    <PackageTags>Banzai Pipeline Dataflow Workflow Json System.Text.Json</PackageTags>
    <LangVersion>default</LangVersion>
    <AssemblyVersion>4.0.1</AssemblyVersion>
    <FileVersion>4.0.1</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="5.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Banzai\Banzai.csproj" />
  </ItemGroup>

</Project>